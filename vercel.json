{
  "framework": "nextjs",
  "regions": ["sfo1"],
  "functions": {
    "src/app/api/**/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/analytics-optimized/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "prisma generate && next build",
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-subscriptions",
      "schedule": "0 2 * * *"
    }
  ]
}